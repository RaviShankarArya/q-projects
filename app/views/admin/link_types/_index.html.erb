
<%# Displays list of @link_types %>
<div id="div_link_type_collections">
	<% @link_types.each do |link_type| %>
		<div id="div_link_type_<%= link_type.id %>">
			<%= render :partial=>"item", :locals=>{:link_type=>link_type} %>
		</div>
	<% end %>
	<% if @link_types.blank? %>
		<div id="div_link_type_empty" class="box text-color-grey padding-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @link_types.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @link_types, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
