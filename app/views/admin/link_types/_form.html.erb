
<%# Renders a partial which is used to create a new link_type %>

<%= form_for([:admin, @link_type], :html => {:id=>"form_link_type", :class=>"mb-0 form-horizontal", :role => "form", :method => (@link_type.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @link_type.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @link_type.new_record? ? admin_link_types_path : admin_link_types_path(@link_type) %>
    <%= hidden_field_tag :fmethod, @link_type.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">


      <!-- Name (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@link_type,
                                              :object_name=>'link_type',
                                              :field_name=>'name',
                                              :display_name=>'Name',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: JIRA."} %>

      <!-- Description (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@link_type,
                                              :object_name=>'link_type',
                                              :field_name=>'description',
                                              :display_name=>'Description',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"Put a suitable description"} %>

      <!-- Theme (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@link_type,
                                              :object_name=>'link_type',
                                              :field_name=>'theme',
                                              :display_name=>'Theme',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"e.g: Jira."} %>

      <!-- Button Text (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@link_type,
                                              :object_name=>'link_type',
                                              :field_name=>'button_text',
                                              :display_name=>'Button Text',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"e.g: Launch JIRA"} %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@link_type.new_record? ? "Create" : "Update"} Item" %>
			<%# if @link_type.new_record? %>
				<%#= link_to "Cancel", "#", :class => "btn", :remote=>true %>
			<%# else %>
				<%#= link_to 'Back', admin_link_types_path, :class=>"btn ml-10", :remote => true unless @link_type.new_record? %>
			<%# end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

