<% if @link_type.errors.blank? %>

	// Fill the right box with first item details
  $('#div_link_type_details').html("<%= escape_javascript(render(:partial=>"show")) %>");
  initPopovers();

	// Refresh the updated item in the list
  $("#div_link_type_<%= @link_type.id %>").html("<%= escape_javascript(render :partial => 'item', :locals => { :link_type => @link_type }) %>")

  // Close Modal
  closeModal();

<% else %>

  // Show the new form in the pop up form.
  heading = "Edit Link Type";
  bodyContent = "<%= escape_javascript(render(:partial=>"form")) %>";
  showModal(heading, bodyContent);
  validateLinkTypeForm();

  // Populate Server Side Errors
  errorMessages = <%= @link_type.errors.full_messages.to_json.html_safe %>;
  populateServerSideErrors('link_type', errorMessages);

<% end %>
