<% if @role.errors.blank? %>
	
	// Fill the right box with first item details
  $('#div_role_details').html("<%= escape_javascript(render(:partial=>"show")) %>");
	
	// Refresh the updated item in the list
  $("#div_role_<%= @role.id %>").html("<%= escape_javascript(render :partial => 'item', :locals => { :role => @role }) %>")
  
  // Close Modal
  closeModal();

<% else %>
	
  // Show the new form in the pop up form.
  heading = "Edit Role";
  bodyContent = "<%= escape_javascript(render(:partial=>"form")) %>";
  showModal(heading, bodyContent);
  validateRoleForm();
  
  // Populate Server Side Errors
  errorMessages = <%= @role.errors.full_messages.to_json.html_safe %>;
  populateServerSideErrors('role', errorMessages);

<% end %>
