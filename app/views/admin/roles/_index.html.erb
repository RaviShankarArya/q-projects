<% roles = project.roles.order("name ASC") %>

<div class="panel panel-archon mt-10">
  <div class="panel-heading">
    <%= theme_panel_title("Team Members") %>
  </div>
  <div class="panel-body clearfix">

    <% if roles.any? %>
      <% roles.each do |role| %>
        <% role.users.each do |user| %>
          <%= render :partial => "admin/roles/item", :locals=>{:project => project, :role => role, :user => user} %>
        <% end %>
      <% end %>
    <% else %>
      <%= content_tag :div, "There are no members in this project.", :class=>"text-align-center text-color-gray fs-14" %>
    <% end %>

  </div>

  <div class="clearfix">
    <%= theme_button('Add a new member', 'plus', new_admin_project_role_path(project), {btn_type: :default, btn_size: :xs, classes: "m-10 pull-right"}) %>
  </div>

</div>