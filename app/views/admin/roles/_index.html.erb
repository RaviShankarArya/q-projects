<% roles = project.roles.order("name ASC") %>
<div class="panel panel-archon mt-10">
  <div class="panel-heading">
    <h3 class="panel-title">Team Members</h3>
  </div>
  <div class="panel-body clearfix">

    <% if roles.any? %>
      <% roles.each do |role| %>
        <% role.users.each do |user| %>
          <%= render :partial => "admin/roles/show", :locals=>{:project => project, :role => role, :user => user} %>
        <% end %>
      <% end %>
    <% else %>
      <%= content_tag :div, "There are no members in this project.", :class=>"text-align-center text-color-gray fs-11" %>
    <% end %>

  </div>

  <div class="panel-footer1 clearfix">
    <%= link_to raw("<i class=\"fa fa-plus mr-5\"></i> Add a new member"), new_admin_project_role_path(project), :class=>"btn btn-default btn-xs pull-right m-10", :remote=>true %>
  </div>

</div>