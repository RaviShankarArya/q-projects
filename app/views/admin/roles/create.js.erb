<% if @role.errors.blank? %>

  // Fill the right box with first role details
	$('#div_project_members').html("<%= escape_javascript(render(:partial=>'index', :locals=>{:project => @project})) %>");

	// Close Modal
  closeModal();
  initPopovers();

<% else %>

  // Show the new form in the pop up form.
  heading = "Add a new member";
  bodyContent = "<%= escape_javascript(render(:partial=>"form")) %>";
  showModal(heading, bodyContent);
  validateRoleForm();

  // Populate Server Side Errors
  errorMessages = <%= @role.errors.full_messages.to_json.html_safe %>;
  populateServerSideErrors('role', errorMessages);

<% end %>
