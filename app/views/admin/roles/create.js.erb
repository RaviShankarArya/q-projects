<% if @role.errors.blank? %>
  // Fill the right box with first role details
	$('#div_project_members').html("<%= escape_javascript(render(:partial=>'index', :locals=>{:project => @project})) %>");
  initPopovers();
<% else %>
  $('#form_project_roles').html("<%= escape_javascript(render(:partial=>'form')) %>");
  validateRoleForm();

 // Populate Server Side Errors
  <%
    text = "You have few errors. They have been highlighted."
    error_message = content_tag(:div, text, class: "alert alert-danger")
  %>
  $("#role_form_error").html("<%= escape_javascript(error_message) %>");
<% end %>
