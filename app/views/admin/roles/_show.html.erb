<%# describes about each user %>
<div class="web-stats info clearfix" style="margin-bottom:5px;padding:5px;height:65px;overflow:hidden;">

   	<div class="visible-md visible-lg pull-left margin-right-10" style="width:20%;max-height:50px;overflow:hidden;">
      <%= display_image(user, :profile_picture, "50px") %>
   	</div>
   	<div class="pull-left" style="width:75%;">
   		<%= link_to user.display_name, admin_user_path(user), :class=>"text-color-blue fs-12" %>
		  <div class="text-color-gray fs-11"><%= role.name %></div>
    </div>

    <%= link_to raw("<i class=\"fa fa-times\"></i>"), admin_project_role_path(:project_id => @project.id, :id=> role.id, :member_id => user.id), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"pull-right", :remote=>true, :style=>"color: #898989;" %>

</div>


