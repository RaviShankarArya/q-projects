<div class="btn-group mt-10 mb-10" style="width:100%;">
  <button type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown">
    Choose a Project <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% @projects.each do |project| %>
      <li><%= link_to project.name, admin_project_path(project), :remote => true %></li>
    <% end %>
    <%= content_tag :li, link_to_next_page(@projects, 'Next Page', :remote => true) %>
    <%= content_tag :li, link_to_previous_page(@projects, 'Previous Page', :remote => true) %>
  </ul>
</div>