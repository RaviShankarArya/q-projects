<%# Displays a detailed view of the project %>

<%# Display Flash Message if any only in case of ajax request %>
<% if request.xhr? %>
  <%= render :partial=>"layouts/common/flash_message" %>
<% end %>

<div class="panel panel-profile">
  <div class="panel-body" style="height:auto;">
    <div class="basic-profile" style="height:auto;padding:10px;">
      <%= link_to display_image(@project, :logo),
                  upload_image_link(@project, admin_project_path(@project), :logo),
                  :remote => true %>
      <div class="pull-left mb-20 text-color-gray">
        <div class="fs-18 text-color-blue"><%= link_to @project.name, project_dashboard_path(pretty_url: @project.pretty_url) %></div>
        <div class="description text-color-red"><%= @project.client.name if @project.client %></div>
      </div>
      <div class="cl"></div>
    </div>

  </div>
  <div class="panel-footer">
    <div class="row text-color-white clearfix fs-12 p-5">
      <div class="col-xs-3 email"><i class="fa fa-envelope margin-right-20"> </i> Info 1</div>
      <div class="col-xs-3 email"><i class="fa fa-envelope margin-right-20"> </i> Info 2</div>
      <div class="col-xs-3 email"><i class="fa fa-envelope margin-right-20"> </i> Info 3</div>
      <div class="col-xs-3 email"><i class="fa fa-envelope margin-right-20"> </i> Info 4</div>
    </div>
  </div>
</div>

<div id="div_project_members">
  <%= render :partial => "admin/roles/index", :locals=>{:project => @project} %>
</div>

<div id="div_project_links">
  <%= render :partial => "admin/project_links/index", :locals=>{:project => @project} %>
</div>

