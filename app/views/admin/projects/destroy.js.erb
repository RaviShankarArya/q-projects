<% if @project %>
  <% if @project.new_record? %>
  	// Fill the right box with first project details
  	$('#div_project_details').html("<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results_found'))) %>");
  <% else %>
  	// Fill the right box with first project details
    $('#div_project_details').html("<%= escape_javascript(render(:partial=>'show')) %>");
  <% end %>
  // Render projects List
  $('#div_project_index').html("<%= escape_javascript(render(:partial=>'index')) %>");
<% else %>
  var noResultsText = "<%= theme_panel_message(I18n.translate('forms.no_results_found')) %>";
  $('#div_project_index').html(noResultsText);
  $('#div_project_details').html(noResultsText);
<% end %>
