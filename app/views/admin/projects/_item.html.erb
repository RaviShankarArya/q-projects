<%# describes about each user %>
<div class="web-stats info clearfix" style="margin-bottom:5px;padding:5px;height:auto;">

   	<div class="visible-md visible-lg pull-left mr-10" style="width:25%;">
      <%= display_image(project, "logo.image.url",
                        width: "100%", height:"100%",
                        place_holder: {width: 100, height: 50, text: "<No Image>"}
                        ) %>
   	</div>
   	<div class="pull-left" style="width:70%;">
   		<%= link_to project.name, admin_project_path(project), :remote=>true, :class=>"text-color-blue fs-16" %>
		  <div class="text-color-red fs-14"><%= project.client.name if project.client %></div>
    	<div class="text-color-gray fs-12"> <%= scrap_word(project.description, 120) %></div>
    </div>

</div>


