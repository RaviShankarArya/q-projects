
<%# Displays list of @clients %>
<div id="div_client_collections">
	<% @clients.each do |client| %>
		<div id="div_client_<%= client.id %>">
			<%= render :partial=>"item", :locals=>{:client=>client} %>
		</div>
	<% end %>
	<% if @clients.blank? %>
		<div id="div_client_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @clients.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @clients, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
