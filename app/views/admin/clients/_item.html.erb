<%# describes about each user %>
<div class="web-stats info clearfix" style="margin-bottom:5px;padding:5px;height:auto;">

    <div class="visible-md visible-lg pull-left mr-10" style="width:25%;">
      <%= display_image(client, "logo.image.url",
                        width: "100%", height:"100%",
                        place_holder: {width: 100, height: 50, text: "<No Image>"}
                        ) %>
    </div>
    <div class="pull-left" style="width:70%;">
      <%= link_to client.name, admin_client_path(client), :remote=>true, :class=>"text-color-blue fs-16" %>
      <% location = client.display_address %>
      <% unless location.blank? %>
      	<div class="text-color-green fs-12 mt-5"><i class="fa fa-map-marker"></i> <%= location %> </div>
      <% end %>
      <!-- <div class="text-color-gray fs-12"> <%#= scrap_word(client.description, 120) %></div> -->
    </div>

</div>


