<%# Renders a partial which is used to create a new client %>
<%= form_for([:admin, @client], :html => {:id=>"form_client", :class=>"mb-0 form-horizontal", :role => "form", :method => (@client.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @client.errors[:base].to_sentence %>

    <div class="form-inputs">

      <%# Name (string)  %>
      <%= theme_form_field(@client, :name) %>

      <%# Description (string)  %>
      <%= theme_form_field(@client, :description, required: false, html_options: {type: 'textarea'}) %>

      <%# City (string)  %>
      <%= theme_form_field(@client, :city, required: false) %>

      <%# State (string)  %>
      <%= theme_form_field(@client, :state, required: false) %>

      <%# Country (string)  %>
      <%= theme_form_field(@client, :country, required: false) %>

      <%# Pretty Url (string)  %>
      <%= theme_form_field(@client, :pretty_url, required: false) %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <%= button_tag "Cancel", :type => "button", :class => "btn btn-default", "data-dismiss" => "modal" %>
      <%= theme_form_button(@client) %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

