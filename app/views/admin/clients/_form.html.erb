
<%# Renders a partial which is used to create a new client %>

<%= form_for([:admin, @client], :html => {:id=>"form_client", :class=>"mb-0 form-horizontal", :role => "form", :method => (@client.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @client.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @client.new_record? ? admin_clients_path : admin_clients_path(@client) %>
    <%= hidden_field_tag :fmethod, @client.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">


      <!-- Name (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@client,
                                              :object_name=>'client',
                                              :field_name=>'name',
                                              :display_name=>'Name',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Description (text) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@client,
                                              :object_name=>'client',
                                              :field_name=>'description',
                                              :display_name=>'Description',
                                              :field_type=>'text',
                                              :input_type=>'textarea',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- City (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@client,
                                              :object_name=>'client',
                                              :field_name=>'city',
                                              :display_name=>'City',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- State (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@client,
                                              :object_name=>'client',
                                              :field_name=>'state',
                                              :display_name=>'State',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Country (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@client,
                                              :object_name=>'client',
                                              :field_name=>'country',
                                              :display_name=>'Country',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Pretty Url (string) -->
      <%= render :partial=>"layouts/common/field", :locals=>{:object=>@client,
                                              :object_name=>'client',
                                              :field_name=>'pretty_url',
                                              :display_name=>'Pretty Url',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@client.new_record? ? "Create" : "Update"} Item" %>
			<%# if @client.new_record? %>
				<%#= link_to "Cancel", "#", :class => "btn", :remote=>true %>
			<%# else %>
				<%#= link_to 'Back', admin_clients_path, :class=>"btn ml-10", :remote => true unless @client.new_record? %>
			<%# end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

