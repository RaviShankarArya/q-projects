<% projects = client.projects.order("name ASC") %>


<div class="panel panel-archon mt-10">
  <div class="panel-heading">
    <h3 class="panel-title">Projects (<%= @client.projects.count %>)
    </h3>
  </div>
  <div class="panel-body clearfix">
    <% if projects.any? %>
      <% projects.each do |project| %>
        <div class="pull-left" style="width:48%;margin-right:2%;">
          <%= render :partial => "admin/clients/projects/item", :locals=>{:project => project} %>
        </div>
      <% end %>
    <% else %>
      <%= content_tag :div, "No projects", :class=>"text-align-center text-color-gray fs-11" %>
    <% end %>
  </div>
</div>

