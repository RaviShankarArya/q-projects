<div class="btn-group mt-10 mb-10" style="width:100%;">
  <button type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown">
    Choose a Client <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% @clients.each do |client| %>
      <li><%= link_to client.name, admin_client_path(client), :remote=>true %></li>
    <% end %>
    <%= content_tag :li, link_to_next_page(@clients, 'Next Page', :remote => true) %>
    <%= content_tag :li, link_to_previous_page(@clients, 'Previous Page', :remote => true) %>
  </ul>
</div>