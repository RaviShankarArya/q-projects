<% if @project_link.errors.blank? %>
	// Fill the right box with first role details
  $('#div_project_links').html("<%= escape_javascript(render(:partial=>'index', :locals=>{:project => @project})) %>");
<% else %>
  $('#form_project_links').html("<%= escape_javascript(render(:partial=>'form')) %>");
  validateProjectLinkForm();

  // Populate Server Side Errors
  <%
    text = "You have few errors. They have been highlighted."
    error_message = content_tag(:div, text, class: "alert alert-danger")
  %>
  $("#project_link_form_error").html("<%= escape_javascript(error_message) %>");
<% end %>
