<% project_links = project.project_links.order("created_at ASC") %>
<div class="panel panel-archon mt-10">
  <div class="panel-heading">
    <h3 class="panel-title">Project Links</h3>
  </div>
  <div class="panel-body clearfix">

    <% if project_links.any? %>
      <% project_links.each do |project_link| %>
        <div class="pull-left" style="width:48%;margin-right:2%;">
          <%= render :partial => "admin/project_links/show", :locals=>{:project => project, :project_link => project_link} %>
        </div>
      <% end %>
    <% else %>
      <%= content_tag :div, "There are no project links added to this project.", :class=>"text-align-center text-color-gray fs-11" %>
    <% end %>

  </div>

  <div class="panel-footer clearfix">
    <%= link_to raw("<i class=\"fa fa-plus mr-5\"></i> Add a new link"), new_admin_project_project_link_path(project), :class=>"btn btn-default btn-xs pull-right ml-10", :remote=>true %>
  </div>

</div>