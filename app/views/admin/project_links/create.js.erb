<% if @project_link.errors.blank? %>
	
	// Fill the right box with first role details
  $('#div_project_links').html("<%= escape_javascript(render(:partial=>'index', :locals=>{:project => @project})) %>");
  
  // Close Modal
  closeModal();

<% else %>
	
  // Show the new form in the pop up form.
  heading = "Create Project Link";
  bodyContent = "<%= escape_javascript(render(:partial=>"form")) %>";
  showModal(heading, bodyContent);
  validateProjectLinkForm();
  
  // Populate Server Side Errors
  errorMessages = <%= @project_link.errors.full_messages.to_json.html_safe %>;
  populateServerSideErrors('project_link', errorMessages);
	
<% end %>
